lower: 1
upper: 100

min: (a b) ->
	(cond
		(< a b): a
		else: b)

max: (a b) ->
	(cond
		(< a b): b
		else: a)

guess: () ->
	(int (/ (+ upper lower) 2))

smaller!: () -> {
	(set! upper: (max lower (- (guess) 1)))
	(guess)
}

bigger!: () -> {
	(set! lower: (min upper (+ (guess) 1)))
	(guess)
}

start!: (n m) -> {
	(set! lower: (min n m))
	(set! upper: (max n m))
	(guess)
}

